<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cio.ibm.vanisdk.sample.SettingsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Switch the type of speech, then go back and tap the Speak button and speak a name"
        android:id="@+id/textView2"
        android:gravity="center"
        android:padding="20dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faces"
        android:id="@+id/serviceSw"
        android:textOff="Answers"
        android:textOn="Faces"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:layout_below="@+id/textView2"
        android:enabled="true"
        android:onClick="onSelectingService" />

</RelativeLayout>
