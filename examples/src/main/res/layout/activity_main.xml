<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".com.ibm.watson.developer_cloud.android.examples.MainActivity">

    <TextView
        android:id="@+id/sttTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="IBM Watson Speech To Text service"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerModels"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:popupBackground="#cccccc"
        style="@style/spinner_style"
        android:layout_below="@+id/sttTitle"/>

    <Button
        android:id="@+id/buttonRecord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerModels"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_record"
        android:onClick="startRecord"
        android:text="Record"
        android:textColor="#FFFFFF"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonRecord"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        android:editable="true"
        android:height="150dp"
        android:text=""/>

    <TextView
        android:id="@+id/sttStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textResult"
        android:layout_marginTop="5dp"
        android:editable="true"
        android:height="20dp"
        android:textSize="12dp"
        android:text="please, press the button to start speaking"/>



    <TextView
        android:id="@+id/ttsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sttStatus"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="IBM Watson Text To Speech service"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerVoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ttsTitle"/>

    <EditText
        android:id="@+id/editText_TTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinnerVoices"
        android:layout_marginTop="0dp"
        android:background="@drawable/back"
        android:height="120dp"
        android:text="Conscious of its spiritual and moral heritage, the Union is founded on the indivisible, universal values of human dignity, freedom, equality and solidarity; it is based on the principles of democracy and the rule of law. "
        android:textSize="14dp" />

    <Button
        android:id="@+id/button_SubmitTTS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/editText_TTS"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_speak"
        android:onClick="playTTS"
        android:text="Speak"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />
</RelativeLayout>